# ==============================================
# ESTOQUE MESTRE - CONFIGURAÇÕES PRINCIPAIS
# ==============================================

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/estoque_mestre"

# JWT Authentication
JWT_SECRET="estoque-mestre-super-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="estoque-mestre-refresh-secret-key-change-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# Application
NODE_ENV="development"
# API Configuration
API_PORT=3000
PORT=3000
API_URL="http://localhost:3000/api"
FRONTEND_URL="http://localhost:4200"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Estoque Mestre <noreply@estoquemestre.com>"

# MinIO Configuration
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET_NAME="estoque-mestre"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_CURRENCY="BRL"

# Error Logging Database (Separate)
ERROR_LOGS_DB_URL="postgresql://postgres:password@localhost:5432/error_logs"
ERROR_LOGS_DB_HOST="localhost"
ERROR_LOGS_DB_PORT=5432
ERROR_LOGS_DB_USER="postgres"
ERROR_LOGS_DB_PASSWORD="password"
ERROR_LOGS_DB_NAME="error_logs"

# Redis (for caching and sessions)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# File Upload Limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
MAX_FILES_PER_PRODUCT=5

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="combined"
